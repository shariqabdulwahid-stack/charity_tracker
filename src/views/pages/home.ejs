<!DOCTYPE html>
<html lang="en">
  <%- include('../layouts/header') %>
<body>
  <%- include('../layouts/main_navbar', { req: req }) %>

  <main class="container py-5 mt-5 text-center">
    <h1 class="display-4 fw-bold mb-3">Welcome to Charity Tracker</h1>
    <p class="lead text-muted mb-4">Discover, track, and support campaigns that make a difference.</p>

    <!-- Always show Browse Campaigns -->
    <a href="/campaigns" class="btn btn-primary btn-lg px-4">
      <i class="bi bi-search me-1"></i> Browse Campaigns
    </a>

    <!-- Only show Create Campaign if logged in -->
    <% if (req.session?.user) { %>
      <a href="/campaigns/new" class="btn btn-outline-secondary btn-lg ms-2">
        <i class="bi bi-plus-circle me-1"></i> Create Campaign
      </a>
    <% } %>
  </main>

  <%- include('../layouts/footer') %>
</body>
</html>
